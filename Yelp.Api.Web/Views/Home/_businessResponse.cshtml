@model Yelp.Api.Domain.Models.BusinessResponse

<div class="col-sm-6 col-lg-4 mb-5 hover-animate" data-marker-id="59c0c8e33b1527bfe2abaf92">
    <div class="card h-100 border-0 shadow">
        <div class="card-img-top overflow-hidden dark-overlay bg-cover" style="background-image: url(@Model.Photos.First()); min-height: 200px;">
            <a class="tile-link" href="detail.html"></a>
            <div class="card-img-overlay-bottom z-index-20">
                <h4 class="text-primary text-shadow">@Model.Name</h4>
                <p class="mb-2 text-xs">
                    <i class="fa fa-star text-warning"></i><i class="fa fa-star text-warning"></i><i class="fa fa-star text-warning"></i><i class="fa fa-star text-warning"></i><i class="fa fa-star text-gray-300">                    </i>
                </p>
            </div>
            <div class="card-img-overlay-top d-flex justify-content-between align-items-center">
                <div class="badge badge-transparent badge-pill px-3 py-2">Restaurants</div><a class="card-fav-icon position-relative z-index-40" href="javascript: void();">
                    <svg class="svg-icon text-white">
                        <use xlink:href="#heart-1"> </use>
                    </svg>
                </a>
            </div>
        </div>
        <div class="card-body">
            <dl>
                @foreach (var review in Model.Reviews)
                {
                    <dt>@review.Rating</dt>
                    <dd>@review.Text</dd>
                }
            </dl>
        </div>
    </div>
</div>